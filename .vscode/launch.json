    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "swagger_server",  // Cambia esta línea para usar el módulo en lugar de 'flask'
            "env": {
                "FLASK_APP": "swagger_server",  // Cambia esto para usar el paquete principal
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}